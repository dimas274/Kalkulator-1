#include <iostream>
using namespace std;

int a, b, pil, hasil;

int penjumlahan ();
int perkalian();

int main () {
   cout<<"Kalkulator Sederhana : "<<endl;
   cout<<"1. Penjumlahan"<<endl;
   cout<<"2.perkalian"<<endl;
   cout<<"Pilihan : ";
   cin>>pil;
   switch (pil) {
      case 1: penjumlahan (); break;
      case 2: perkalian ();break;
      default: cout<<"Pilihan Tidak Tersedia !!";
}
}
int penjumlahan () {
   cout<<endl<<endl;
   cout<<"--Anda Memilih Penjumlahan=="<<endl;
   cout<<"Masukkan Nilai Pertama : "; cin>>a;
   cout<<"Masukkan Nilai Kedua : "; cin>>b;
   hasil=a+b;
   cout<<"Hasil Penjumlahan : "<<hasil<<endl<<endl;
}
int perkalian () {
   cout<<endl<<endl;
   cout<<"--Anda Memilih perkalian=="<<endl;
   cout<<"Masukkan Nilai Pertama : "; cin>>a;
   cout<<"Masukkan Nilai Kedua : "; cin>>b;
   hasil=a*b;
   cout<<"Hasil Perkalian : "<<hasil<<endl<<endl;
}
